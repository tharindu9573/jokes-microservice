ARG BASE_URL
ARG RMQ_URL
ARG MONGO_ROOT_PASSWORD
ARG MONGO_CONTAINER_PORT
ARG MOD_CONTAINER_PORT
ARG AN_QUEUE_NAME
ARG PORT

FROM node:slim

ENV NODE_ENV development
ENV BASE_URL=$BASE_URL
ENV RMQ_URL=$RMQ_URL
ENV MONGO_ROOT_PASSWORD=$MONGO_ROOT_PASSWORD
ENV MONGO_CONTAINER_PORT=$MONGO_CONTAINER_PORT
ENV MOD_CONTAINER_PORT=$MOD_CONTAINER_PORT
ENV AN_QUEUE_NAME=$AN_QUEUE_NAME
ENV PORT=$PORT

WORKDIR /express-docker

COPY . .

RUN npm install

CMD ["npm", "start"]

EXPOSE 3301